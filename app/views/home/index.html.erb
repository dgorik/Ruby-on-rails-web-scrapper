<header>
  <h1>Web Page Analyzer</h1>
  <form method="post" action="create">
    <input type="url" name="url" placeholder="Enter the URL..." required>
    <button type="submit">Analyze</button>
  </form>
</header>

# think about adding form validations

<main class="history-section">
  <section>
    <h2>Previously Analyzed Pages</h2>
    
    <% if @content_pages.any? %>
      <ul class="history-list">
        <% @content_pages.each do |page| %>
          <li class="history-item">
            <%= link_to page.title.presence || page.url, 
                  history_page_path(page),  # Uses the named route
                  target: "_blank", 
                  rel: "noopener" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="no-history">No pages analyzed yet. Enter a URL above to begin!</p>
    <% end %>
  </section>
</main>