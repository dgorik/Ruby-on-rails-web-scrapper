<div>
  <h1><%= @content_page.title %></h1>

  <div>
    <a href="<%= @content_page.url %>" target="_blank" rel="noopener noreferrer">
      <%= @content_page.url %>
    </a>
  </div>

  <div>
    <h3>Table of Contents</h3>
    <% if @content_page.table_of_contents.present? %>
      <ul>
        <% @content_page.table_of_contents.each do |item| %>
          <li>
            <%= item['text'] %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No table of contents available</p>
    <% end %>
  </div>

  <div>
    <p>Word count: <%= @content_page.word_count %></p>

    <% if @content_page.top_10_words.present? %>
      <h2>Top 10 Most Frequent Words</h2>
      <table>
        <thead>
          <tr>
            <th>Word</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody>
          <% @content_page.top_10_words.each do |word, count| %>
            <tr>
              <td><%= word %></td>
              <td><%= count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
